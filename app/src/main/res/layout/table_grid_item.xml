<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/table_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/table_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/table_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/table_icon"
            android:layout_alignLeft="@id/table_icon"
            android:layout_alignEnd="@id/table_icon"
            android:layout_alignRight="@id/table_icon"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/table_num"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/table_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/table_id"
            android:layout_centerInParent="true"
            android:contentDescription="@string/table_num" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>